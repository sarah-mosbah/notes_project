<% action_name = note.persisted? ? note_url(note) : notes_url %>
<% method_name = note.persisted? ? "PUT" : "POST"%>
<% btn_name = note.persisted? ? "Update" : "New"%>



<form class='form' action="<%= action_name %>" method="POST">
<input type="hidden" value="<%= method_name%>" name="_method">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <p>
    <label for="note_title">Title</label>
    <input id="note_title"
      name="note[title]" value="<%= note.title%>">
  </p>
  <p>
    <label for="note_body">Body</label>
    <textarea id="note_body"
      name="note[body]"><%= note.body%></textarea>
  </p>

  <input type="submit" value="<%=btn_name%>" class="button">

</form>